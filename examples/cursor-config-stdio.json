{
  "mcpServers": {
    "conflux-mcp-server": {
      "command": "node",
      "args": ["./build/index.js"],
      "cwd": "/path/to/conflux-mcp-server",
      "env": {
        "NODE_ENV": "development",
        "LOG_LEVEL": "debug",
        "PRIVATE_KEY": "your_private_key_here"
      }
    }
  },
  "notes": {
    "unix_paths": "Use forward slashes: /home/user/project",
    "windows_paths": "Use double backslashes: C:\\Users\\username\\Desktop\\project",
    "windows_alt": "Or use forward slashes: C:/Users/username/Desktop/project",
    "env_vars": "Environment variables are passed through the 'env' section",
    "private_key": "Add your Conflux private key for transfer tools to work",
    "restart": "Restart Cursor after changing environment variables"
  },
  "environmentVariables": {
    "NODE_ENV": "development",
    "LOG_LEVEL": "debug",
    "PRIVATE_KEY": "0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef"
  }
}